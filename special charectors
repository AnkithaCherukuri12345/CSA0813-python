import string
def count_special_characters(statement):
    special_characters = string.punctuation  # all special characters
    count = 0
    for char in statement:
        if char in special_characters:
            count += 1
    return count
statement = "Modi Birthday @ September 17, #&$% is the wishes code for him."
result = count_special_characters(statement)
print(f"Number of special Characters: {result}")
